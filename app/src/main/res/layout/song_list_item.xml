<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_marginVertical="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingVertical="10dp"
    android:elevation="4dp"
    android:background="@drawable/rounded_edges"
    android:forceDarkAllowed="false"
    android:layout_marginHorizontal="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingTop="6dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/theIcon"
                android:src="@drawable/ic_baseline_music_note_24"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:contentDescription="@string/song_symbol" />

        <TextView
            android:id="@+id/songTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingHorizontal="20dp"
            android:text="The sample title"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"/>

        <ImageView
            android:id="@+id/selectionIndicator"
            android:src="@drawable/right_arrow_go"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:contentDescription="@string/go_icon" />

    </LinearLayout>
</LinearLayout>