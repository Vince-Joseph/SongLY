<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="Theme.SongLY" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color.  to change the color of bottom navigation bar-->
        <item name="colorPrimary">@color/dodgerblue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dodgerblue</item>
        <!-- Customize your theme here. -->

        <item name="actionModeBackground">@color/dodgerblue</item>
        <item name="windowActionModeOverlay">true</item>
<!--        <item name="android:actionModeStyle">@style/Theme.SongLY.ActionMode</item>-->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Theme.SongLY.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/dodgerblue</item>
        <item name="android:textColor" >@color/Green</item>
    </style>

    <style name="Theme.SongLY.NoActionBarSplashScreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground" >@color/dodgerblue</item>
        <item name="colorPrimary">@color/dodgerblue</item>
        <item name="colorPrimaryDark">@color/dodgerblue</item>
        <item name="colorAccent">@color/dodgerblue</item>
        <item name="android:statusBarColor">@color/dodgerblue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>